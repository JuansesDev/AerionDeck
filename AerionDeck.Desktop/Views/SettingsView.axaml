<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:AerionDeck.Desktop.ViewModels"
             xmlns:conv="using:AerionDeck.Desktop.Converters"
             xmlns:icons="using:AerionDeck.Desktop"
             xmlns:m="using:AerionDeck.Desktop.Models"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="600"
             x:Class="AerionDeck.Desktop.Views.SettingsView"
             x:DataType="vm:SettingsViewModel"
             x:Name="Root"
             Background="#0d0d1a">

    <UserControl.Resources>
        <conv:IconConverter x:Key="IconConverter"/>
    </UserControl.Resources>


    <Grid RowDefinitions="*,Auto">
        
        <TabControl Margin="24,10" Theme="{StaticResource {x:Type TabControl}}">
            <TabControl.Styles>
                <Style Selector="TabItem">
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Foreground" Value="#888"/>
                    <Setter Property="Margin" Value="0,0,20,0"/>
                    <Setter Property="Padding" Value="0,0,0,10"/>
                </Style>
                <Style Selector="TabItem:selected">
                    <Setter Property="Foreground" Value="#6366f1"/>
                    <Setter Property="BorderBrush" Value="#6366f1"/>
                    <Setter Property="BorderThickness" Value="0,0,0,2"/>
                </Style>
            </TabControl.Styles>

            <!-- TAB 1: DECK LAYOUT -->
            <TabItem Header="{Binding Localization[DeckLayout]}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,20,0,0">
                    <StackPanel Spacing="20">
                        
                        <!-- Sección: Idioma -->
                        <Border Background="#15152a" 
                                CornerRadius="16" 
                                Padding="20"
                                BoxShadow="0 4 20 0 #10000000">
                            <Grid ColumnDefinitions="*,Auto">
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <PathIcon Data="{x:Static icons:Icons.Globe}" 
                                              Width="20" Height="20"
                                              Foreground="#6366f1"/>
                                    <TextBlock Text="{Binding Localization[Language]}" 
                                               FontSize="16" 
                                               FontWeight="SemiBold" 
                                               Foreground="#f0f0f0"/>
                                </StackPanel>
                                
                                <ComboBox Grid.Column="1"
                                          ItemsSource="{Binding Languages}"
                                          SelectedItem="{Binding SelectedLanguage}"
                                          Background="#0d0d1a"
                                          Foreground="White"
                                          CornerRadius="8"
                                          MinWidth="120">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate DataType="vm:SettingsViewModel+LanguageOption">
                                            <TextBlock Text="{Binding Name}"/>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </Grid>
                        </Border>

                        <!-- Sección: Perfiles -->
                        <Border Background="#15152a" 
                                CornerRadius="16" 
                                Padding="20"
                                BoxShadow="0 4 20 0 #10000000">
                            <StackPanel Spacing="16">
                                <Grid ColumnDefinitions="*,Auto">
                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                        <PathIcon Data="{x:Static icons:Icons.Folder}" 
                                                  Width="20" Height="20"
                                                  Foreground="#6366f1"/>
                                        <TextBlock Text="{Binding Localization[Profile]}" 
                                                   FontSize="16" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="#f0f0f0"/>
                                    </StackPanel>
                                    
                                    <StackPanel Orientation="Horizontal" Spacing="8" Grid.Column="1">
                                        <Button Command="{Binding ExportProfileCommand}"
                                                Background="Transparent"
                                                Padding="8"
                                                CornerRadius="6"
                                                Cursor="Hand"
                                                ToolTip.Tip="{Binding Localization[ExportProfile]}">
                                            <PathIcon Data="{x:Static icons:Icons.Link}" Width="16" Height="16" Foreground="#aaa"/>
                                        </Button>
                                        <Button Command="{Binding DeleteProfileCommand}"
                                                Background="Transparent"
                                                Padding="8"
                                                CornerRadius="6"
                                                Cursor="Hand"
                                                ToolTip.Tip="{Binding Localization[DeleteProfile]}">
                                            <PathIcon Data="{x:Static icons:Icons.Delete}" Width="16" Height="16" Foreground="#e63946"/>
                                        </Button>
                                    </StackPanel>
                                </Grid>

                                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                                    <ComboBox Grid.Row="0" Grid.Column="0"
                                              ItemsSource="{Binding Profiles}"
                                              SelectedItem="{Binding SelectedProfile}"
                                              HorizontalAlignment="Stretch"
                                              Background="#0d0d1a"
                                              Foreground="White"
                                              CornerRadius="8"
                                              Margin="0,0,10,0">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate DataType="m:Profile">
                                                <TextBlock Text="{Binding Name}"/>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>

                                    <Button Grid.Row="0" Grid.Column="1"
                                            Command="{Binding AddProfileCommand}"
                                            Background="#6366f1"
                                            Padding="12,8"
                                            CornerRadius="8"
                                            Cursor="Hand">
                                        <PathIcon Data="{x:Static icons:Icons.Plus}" Width="16" Height="16" Foreground="White"/>
                                    </Button>
                                    
                                    <TextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                             Text="{Binding NewProfileName}"
                                             Watermark="{Binding Localization[NewProfilePlaceholder]}"
                                             Margin="0,10,0,0"
                                             Background="#0d0d1a"
                                             Foreground="White"
                                             BorderBrush="#333"
                                             BorderThickness="1"
                                             CornerRadius="8"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Sección: Lista de acciones -->
                        <Border Background="#15152a" 
                                CornerRadius="16" 
                                Padding="20"
                                BoxShadow="0 4 20 0 #10000000">
                            <StackPanel Spacing="16">
                                <!-- Header -->
                                <Grid ColumnDefinitions="*,Auto">
                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                        <PathIcon Data="{x:Static icons:Icons.Lightning}" 
                                                  Width="20" Height="20"
                                                  Foreground="#6366f1"/>
                                        <TextBlock Text="{Binding Localization[Actions]}" 
                                                   FontSize="16" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="#f0f0f0"/>
                                    </StackPanel>
                                    
                                    <!-- Botón agregar -->
                                    <Button Grid.Column="1"
                                            Command="{Binding AddActionCommand}"
                                            Background="#6366f1"
                                            Padding="12,8"
                                            CornerRadius="8"
                                            Cursor="Hand">
                                        <Button.Styles>
                                            <Style Selector="Button:pointerover">
                                                <Setter Property="Background" Value="#7c7ff0"/>
                                            </Style>
                                        </Button.Styles>
                                        <StackPanel Orientation="Horizontal" Spacing="6">
                                            <PathIcon Data="{x:Static icons:Icons.Plus}"
                                                      Width="16" Height="16"
                                                      Foreground="White"/>
                                            <TextBlock Text="{Binding Localization[Add]}" 
                                                       Foreground="White"
                                                       FontSize="13"
                                                       FontWeight="Medium"/>
                                        </StackPanel>
                                    </Button>
                                </Grid>
                                
                                <!-- Lista de acciones -->
                                <ItemsControl ItemsSource="{Binding Actions}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="vm:DeckActionViewModel">
                                            <Border Background="#1a1a30"
                                                    CornerRadius="12"
                                                    Padding="14"
                                                    Margin="0,4"
                                                    Opacity="{Binding IsEnabled, Converter={x:Static vm:SettingsViewModel.EnabledOpacityConverter}}">
                                                <Grid ColumnDefinitions="Auto,*,Auto">
                                                    <!-- Icono y color -->
                                                    <Border Width="48" Height="48"
                                                            CornerRadius="10"
                                                            Background="{Binding BackgroundColor}"
                                                            Margin="0,0,14,0">
                                                        <PathIcon Data="{Binding Icon, Converter={StaticResource IconConverter}}"
                                                                  Width="24" Height="24"
                                                                  Foreground="White"
                                                                  HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                                    </Border>
                                                    
                                                    <!-- Info -->
                                                    <StackPanel Grid.Column="1" 
                                                                VerticalAlignment="Center"
                                                                Spacing="2">
                                                        <TextBlock Text="{Binding Name}"
                                                                   Foreground="#f0f0f0"
                                                                   FontSize="14"
                                                                   FontWeight="Medium"/>
                                                        <TextBlock Text="{Binding Model.Command}"
                                                                   Foreground="#666"
                                                                   FontSize="11"/>
                                                    </StackPanel>
                                                    
                                                    <!-- Controles -->
                                                    <StackPanel Grid.Column="2" 
                                                                Orientation="Horizontal" 
                                                                Spacing="6">
                                                        <!-- Mover arriba -->
                                                        <Button Command="{Binding $parent[ItemsControl].((vm:SettingsViewModel)DataContext).MoveUpCommand}"
                                                                CommandParameter="{Binding}"
                                                                Background="Transparent"
                                                                Padding="8"
                                                                CornerRadius="6"
                                                                Cursor="Hand"
                                                                ToolTip.Tip="Mover arriba">
                                                            <Button.Styles>
                                                                <Style Selector="Button:pointerover">
                                                                    <Setter Property="Background" Value="#25253a"/>
                                                                </Style>
                                                            </Button.Styles>
                                                            <PathIcon Data="{x:Static icons:Icons.ChevronUp}"
                                                                      Width="16" Height="16"
                                                                      Foreground="#666"/>
                                                        </Button>
                                                        
                                                        <!-- Mover abajo -->
                                                        <Button Command="{Binding $parent[ItemsControl].((vm:SettingsViewModel)DataContext).MoveDownCommand}"
                                                                CommandParameter="{Binding}"
                                                                Background="Transparent"
                                                                Padding="8"
                                                                CornerRadius="6"
                                                                Cursor="Hand"
                                                                ToolTip.Tip="Mover abajo">
                                                            <Button.Styles>
                                                                <Style Selector="Button:pointerover">
                                                                    <Setter Property="Background" Value="#25253a"/>
                                                                </Style>
                                                            </Button.Styles>
                                                            <PathIcon Data="{x:Static icons:Icons.ChevronDown}"
                                                                      Width="16" Height="16"
                                                                      Foreground="#666"/>
                                                        </Button>
                                                        
                                                        <!-- Separador visual -->
                                                        <Border Width="1" Height="24" Background="#333" Margin="4,0"/>
                                                        
                                                        <!-- Habilitar/Deshabilitar -->
                                                        <Button Command="{Binding $parent[ItemsControl].((vm:SettingsViewModel)DataContext).ToggleEnabledCommand}"
                                                                CommandParameter="{Binding}"
                                                                Background="Transparent"
                                                                Padding="8"
                                                                CornerRadius="6"
                                                                Cursor="Hand"
                                                                ToolTip.Tip="Habilitar/Deshabilitar">
                                                            <Button.Styles>
                                                                <Style Selector="Button:pointerover">
                                                                    <Setter Property="Background" Value="#25253a"/>
                                                                </Style>
                                                            </Button.Styles>
                                                            <PathIcon Data="{Binding IsEnabled, Converter={StaticResource IconConverter}, ConverterParameter=eye}"
                                                                      Width="16" Height="16"
                                                                      Foreground="{Binding IsEnabled, Converter={StaticResource IconConverter}, ConverterParameter=eyeColor}"/>
                                                        </Button>
                                                        
                                                        <!-- Editar -->
                                                        <Button Command="{Binding $parent[ItemsControl].((vm:SettingsViewModel)DataContext).EditActionCommand}"
                                                                CommandParameter="{Binding}"
                                                                Background="Transparent"
                                                                Padding="8"
                                                                CornerRadius="6"
                                                                Cursor="Hand"
                                                                ToolTip.Tip="Editar">
                                                            <Button.Styles>
                                                                <Style Selector="Button:pointerover">
                                                                    <Setter Property="Background" Value="#6366f120"/>
                                                                </Style>
                                                            </Button.Styles>
                                                            <PathIcon Data="{x:Static icons:Icons.Edit}"
                                                                      Width="16" Height="16"
                                                                      Foreground="#6366f1"/>
                                                        </Button>
                                                        
                                                        <!-- Eliminar -->
                                                        <Button Command="{Binding $parent[ItemsControl].((vm:SettingsViewModel)DataContext).DeleteActionCommand}"
                                                                CommandParameter="{Binding}"
                                                                Background="Transparent"
                                                                Padding="8"
                                                                CornerRadius="6"
                                                                Cursor="Hand"
                                                                ToolTip.Tip="Eliminar">
                                                            <Button.Styles>
                                                                <Style Selector="Button:pointerover">
                                                                    <Setter Property="Background" Value="#e6394620"/>
                                                                </Style>
                                                            </Button.Styles>
                                                            <PathIcon Data="{x:Static icons:Icons.Delete}"
                                                                      Width="16" Height="16"
                                                                      Foreground="#e63946"/>
                                                        </Button>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                
                                <!-- Mensaje vacío -->
                                <Border IsVisible="{Binding !Actions.Count}"
                                        Background="#0d0d1a"
                                        CornerRadius="10"
                                        Padding="30">
                                    <StackPanel Spacing="12" HorizontalAlignment="Center">
                                        <PathIcon Data="{x:Static icons:Icons.Plus}"
                                                  Width="32" Height="32"
                                                  Foreground="#444"/>
                                        <TextBlock Text="{Binding Localization[NoActions]}" 
                                                   Foreground="#555"
                                                   FontSize="13"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding Localization[NoActionsHint]}" 
                                                   Foreground="#444"
                                                   FontSize="11"
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>
                        
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- TAB 2: MACRO LIBRARY -->
            <TabItem Header="Macro Library">
                <Grid ColumnDefinitions="*,300" Margin="0,20,0,0">
                    <!-- Left: Macro List -->
                    <Border Background="#15152a" 
                            CornerRadius="16" 
                            Padding="20"
                            Margin="0,0,20,0"
                            BoxShadow="0 4 20 0 #10000000">
                        <Grid RowDefinitions="Auto,*">
                            <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,16">
                                <TextBlock Text="Macros" FontSize="18" FontWeight="SemiBold" Foreground="#f0f0f0"/>
                                <Button Grid.Column="1"
                                        Command="{Binding MacroManager.AddMacroCommand}"
                                        Background="#6366f1"
                                        Padding="10,6"
                                        CornerRadius="6"
                                        Cursor="Hand">
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <PathIcon Data="{x:Static icons:Icons.Plus}" Width="14" Height="14" Foreground="White"/>
                                        <TextBlock Text="New" Foreground="White" FontSize="12"/>
                                    </StackPanel>
                                </Button>
                            </Grid>

                            <ListBox Grid.Row="1" 
                                     ItemsSource="{Binding MacroManager.Macros}"
                                     SelectedItem="{Binding MacroManager.SelectedMacro}"
                                     Background="Transparent">
                                <ListBox.ItemTemplate>
                                    <DataTemplate DataType="m:Macro">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <StackPanel Spacing="2">
                                                <TextBlock Text="{Binding Name}" Foreground="White" FontWeight="Medium"/>
                                                <TextBlock Text="{Binding Description}" Foreground="#888" FontSize="11" TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Border>

                    <!-- Right: Editor -->
                    <Border Grid.Column="1" 
                            Background="#15152a" 
                            CornerRadius="16" 
                            Padding="20"
                            BoxShadow="0 4 20 0 #10000000"
                            IsVisible="{Binding MacroManager.IsMacroSelected}">
                        <Grid RowDefinitions="Auto,Auto,*,Auto">
                            <!-- Header -->
                            <StackPanel Spacing="12" Margin="0,0,0,20">
                                <TextBlock Text="Edit Macro" FontSize="16" FontWeight="SemiBold" Foreground="#6366f1"/>
                                
                                <TextBox Text="{Binding MacroManager.SelectedMacro.Name}" 
                                         Watermark="Macro Name"
                                         Background="#0d0d1a" Foreground="White" BorderThickness="0" CornerRadius="6"/>
                                         
                                <TextBox Text="{Binding MacroManager.SelectedMacro.Description}" 
                                         Watermark="Description"
                                         Background="#0d0d1a" Foreground="White" BorderThickness="0" CornerRadius="6"
                                         FontSize="12"/>
                            </StackPanel>

                            <!-- Steps Header -->
                            <Grid Grid.Row="1" ColumnDefinitions="*,Auto" Margin="0,0,0,10">
                                <TextBlock Text="Steps" Foreground="#888" FontWeight="Medium"/>
                                <Button Grid.Column="1"
                                        Command="{Binding MacroManager.AddStepCommand}"
                                        Background="#25253a"
                                        Padding="8,4"
                                        CornerRadius="4"
                                        Cursor="Hand">
                                    <PathIcon Data="{x:Static icons:Icons.Plus}" Width="12" Height="12" Foreground="#aaa"/>
                                </Button>
                            </Grid>

                            <!-- Steps List -->
                            <ScrollViewer Grid.Row="2">
                                <ItemsControl ItemsSource="{Binding MacroManager.SelectedMacro.Steps}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="m:MacroStep">
                                            <Border Background="#0d0d1a" CornerRadius="6" Padding="10" Margin="0,0,0,8">
                                                <Grid ColumnDefinitions="Auto,*,Auto">
                                                    <ComboBox SelectedItem="{Binding Type}"
                                                              ItemsSource="{Binding #Root.DataContext.MacroManager.AvailableMacroTypes}"
                                                              Background="#25253a" Foreground="White" CornerRadius="4"
                                                              FontSize="11" Margin="0,0,8,0" MinWidth="100"/>
                                                    
                                                    <TextBox Grid.Column="1" 
                                                             Text="{Binding Value}"
                                                             Background="#25253a" Foreground="White" BorderThickness="0" CornerRadius="4"
                                                             FontSize="11" Watermark="Value"/>

                                                    <Button Grid.Column="2"
                                                            Command="{Binding #Root.DataContext.MacroManager.RemoveStepCommand}"
                                                            CommandParameter="{Binding}"
                                                            Background="Transparent" Padding="4" Margin="4,0,0,0" Cursor="Hand">
                                                        <PathIcon Data="{x:Static icons:Icons.Delete}" Width="12" Height="12" Foreground="#e63946"/>
                                                    </Button>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>

                            <!-- Footer Actions -->
                            <StackPanel Grid.Row="3" Spacing="10" Margin="0,20,0,0">
                                <Button Command="{Binding MacroManager.SaveMacrosCommand}"
                                        Content="Save Changes"
                                        Background="#6366f1" Foreground="White"
                                        HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
                                        CornerRadius="8"/>
                                        
                                <Button Command="{Binding MacroManager.DeleteMacroCommand}"
                                        Content="Delete Macro"
                                        Background="#e6394620" Foreground="#e63946"
                                        HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
                                        CornerRadius="8"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Empty State for Editor -->
                    <Border Grid.Column="1" 
                            Background="#15152a" 
                            CornerRadius="16" 
                            Padding="20"
                            BoxShadow="0 4 20 0 #10000000"
                            IsVisible="{Binding !MacroManager.IsMacroSelected}">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="10">
                            <PathIcon Data="{x:Static icons:Icons.Lightning}" Width="32" Height="32" Foreground="#333"/>
                            <TextBlock Text="Select a macro to edit" Foreground="#555"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Panel de edición (overlay) -->
        <Border Grid.Row="0" 
                Background="#0d0d1acc"
                IsVisible="{Binding IsEditing}">
            <Border Background="#15152a" 
                    CornerRadius="16" 
                    Padding="24"
                    MaxWidth="420"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    BoxShadow="0 8 40 0 #40000000">
                <ScrollViewer MaxHeight="500" VerticalScrollBarVisibility="Auto">
                <StackPanel Spacing="20">
                    <!-- Header del modal -->
                    <Grid ColumnDefinitions="*,Auto">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <PathIcon Data="{x:Static icons:Icons.Edit}" 
                                      Width="20" Height="20"
                                      Foreground="#6366f1"/>
                            <TextBlock Text="{Binding Localization[EditAction]}" 
                                       FontSize="18" 
                                       FontWeight="SemiBold" 
                                       Foreground="#f0f0f0"/>
                        </StackPanel>
                        <Button Grid.Column="1"
                                Command="{Binding CancelEditCommand}"
                                Background="Transparent"
                                Padding="6"
                                CornerRadius="6"
                                Cursor="Hand">
                            <Button.Styles>
                                <Style Selector="Button:pointerover">
                                    <Setter Property="Background" Value="#25253a"/>
                                </Style>
                            </Button.Styles>
                            <PathIcon Data="{x:Static icons:Icons.Close}"
                                      Width="18" Height="18"
                                      Foreground="#666"/>
                        </Button>
                    </Grid>
                    
                    <!-- Campo: Nombre -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="{Binding Localization[Name]}" Foreground="#888" FontSize="12" FontWeight="Medium"/>
                        <TextBox Text="{Binding EditName}" 
                                 Background="#0d0d1a"
                                 Foreground="White"
                                 BorderBrush="#333"
                                 BorderThickness="1"
                                 CornerRadius="8"
                                 Padding="12,10"/>
                    </StackPanel>

                    <!-- Campo: Icono -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="{Binding Localization[Icon]}" Foreground="#888" FontSize="12" FontWeight="Medium"/>
                        
                        <!-- Buscador de iconos -->
                        <TextBox Text="{Binding IconSearchText}" 
                                 Watermark="{Binding Localization[SearchIcon]}"
                                 Background="#0d0d1a"
                                 Foreground="White"
                                 BorderBrush="#333"
                                 BorderThickness="1"
                                 CornerRadius="8"
                                 Padding="8,6"
                                 Margin="0,0,0,4"/>

                        <Border Background="#0d0d1a" 
                                CornerRadius="8" 
                                Padding="10"
                                BorderBrush="#333"
                                BorderThickness="1">
                            <ItemsControl ItemsSource="{Binding FilteredIconOptions}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="conv:IconOption">
                                        <Button Background="{Binding Id, Converter={StaticResource IconConverter}, ConverterParameter=iconBg}"
                                                Padding="8"
                                                Margin="3"
                                                CornerRadius="6"
                                                Cursor="Hand"
                                                ToolTip.Tip="{Binding Name}"
                                                Click="OnIconClick"
                                                Tag="{Binding Id}">
                                            <Button.Styles>
                                                <Style Selector="Button">
                                                    <Setter Property="Background" Value="#1a1a30"/>
                                                </Style>
                                                <Style Selector="Button:pointerover">
                                                    <Setter Property="Background" Value="#6366f140"/>
                                                </Style>
                                            </Button.Styles>
                                            <PathIcon Data="{Binding Id, Converter={StaticResource IconConverter}}"
                                                      Width="20" Height="20"
                                                      Foreground="#aaa"/>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Border>
                        
                        <!-- Preview del icono seleccionado -->
                        <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,4,0,0">
                            <TextBlock Text="{Binding Localization[Selected]}" Foreground="#555" FontSize="11" VerticalAlignment="Center"/>
                            <Border Width="32" Height="32"
                                    CornerRadius="6"
                                    Background="{Binding EditBackgroundColor}">
                                <PathIcon Data="{Binding EditIcon, Converter={StaticResource IconConverter}}"
                                          Width="18" Height="18"
                                          Foreground="White"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>

                    <!-- Campo: Tipo de acción -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="{Binding Localization[ActionType]}" Foreground="#888" FontSize="12" FontWeight="Medium"/>
                        <ComboBox ItemsSource="{Binding AvailableActionTypes}"
                                  SelectedItem="{Binding EditActionType}"
                                  Background="#0d0d1a"
                                  Foreground="White"
                                  CornerRadius="8"
                                  Padding="12,10"
                                  HorizontalAlignment="Stretch"/>
                    </StackPanel>

                    <!-- Campo: Selección de Macro -->
                    <StackPanel Spacing="8" IsVisible="{Binding IsMacroType}">
                        <TextBlock Text="Select Macro" Foreground="#888" FontSize="12" FontWeight="Medium"/>
                        
                        <ComboBox ItemsSource="{Binding AvailableMacros}"
                                  SelectedValue="{Binding SelectedMacroId}"
                                  SelectedValueBinding="{Binding Id}"
                                  Background="#0d0d1a"
                                  Foreground="White"
                                  CornerRadius="8"
                                  Padding="12,10"
                                  HorizontalAlignment="Stretch">
                            <ComboBox.ItemTemplate>
                                <DataTemplate DataType="m:Macro">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}"/>
                                        <TextBlock Text="{Binding Description}" FontSize="10" Foreground="#888"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        
                        <TextBlock Text="Manage macros in the 'Macro Library' tab." 
                                   Foreground="#555" FontSize="11" Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- Campo: Comando (ComboBox para Audio, TextBox para Launch) -->
                    <StackPanel Spacing="8" IsVisible="{Binding !IsMacroType}">
                        <TextBlock Text="{Binding Localization[Command]}" Foreground="#888" FontSize="12" FontWeight="Medium"/>
                        
                        <!-- ComboBox para selección de comandos predefinidos -->
                        <ComboBox ItemsSource="{Binding AvailableCommands}"
                                  SelectedItem="{Binding EditCommand}"
                                  IsVisible="{Binding IsAudioType}"
                                  Background="#0d0d1a"
                                  Foreground="White"
                                  CornerRadius="8"
                                  Padding="12,10"
                                  HorizontalAlignment="Stretch"/>
                        
                        <!-- TextBox para aplicaciones personalizadas -->
                        <StackPanel IsVisible="{Binding IsLaunchType}" Spacing="6">
                            <Grid ColumnDefinitions="*,Auto">
                                <TextBox Text="{Binding EditCommand}" 
                                         Background="#0d0d1a"
                                         Foreground="White"
                                         BorderBrush="#333"
                                         BorderThickness="1"
                                         CornerRadius="8"
                                         Padding="12,10"
                                         Watermark="{Binding Localization[CommandPlaceholder]}"/>
                                <Button Grid.Column="1"
                                        Command="{Binding BrowseFileCommand}"
                                        Margin="8,0,0,0"
                                        Padding="10"
                                        CornerRadius="8"
                                        Background="#25253a"
                                        ToolTip.Tip="Buscar archivo">
                                    <PathIcon Data="{x:Static icons:Icons.Folder}" Foreground="#aaa"/>
                                </Button>
                            </Grid>
                            <TextBlock Text="{Binding Localization[MultiLaunchHint]}" 
                                       Foreground="#555"
                                       FontSize="11"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Campo: Color -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="{Binding Localization[Color]}" Foreground="#888" FontSize="12" FontWeight="Medium"/>
                        <Border Background="#0d0d1a" 
                                CornerRadius="8" 
                                Padding="10"
                                BorderBrush="#333"
                                BorderThickness="1">
                            <ItemsControl ItemsSource="{Binding SuggestedColors}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Background="{Binding}"
                                                Width="36" Height="36"
                                                Margin="3"
                                                CornerRadius="8"
                                                Cursor="Hand"
                                                Click="OnColorClick">
                                            <Button.Styles>
                                                <Style Selector="Button:pointerover">
                                                    <Setter Property="Opacity" Value="0.8"/>
                                                </Style>
                                            </Button.Styles>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Border>
                    </StackPanel>

                    <!-- Checkbox: Habilitado -->
                    <CheckBox Content="{Binding Localization[ActionEnabled]}" 
                              IsChecked="{Binding EditIsEnabled}"
                              Foreground="#aaa"
                              FontSize="13"/>

                    <!-- Botones de acción -->
                    <Grid ColumnDefinitions="*,*" Margin="0,8,0,0">
                        <Button Grid.Column="0" 
                                Command="{Binding CancelEditCommand}"
                                Background="#333"
                                Foreground="White"
                                Padding="16,12"
                                CornerRadius="10"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                Margin="0,0,6,0"
                                Cursor="Hand">
                            <Button.Styles>
                                <Style Selector="Button:pointerover">
                                    <Setter Property="Background" Value="#444"/>
                                </Style>
                            </Button.Styles>
                            <TextBlock Text="{Binding Localization[Cancel]}" FontWeight="Medium"/>
                        </Button>
                        <Button Grid.Column="1" 
                                Command="{Binding SaveEditCommand}"
                                Background="#6366f1"
                                Foreground="White"
                                Padding="16,12"
                                CornerRadius="10"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                Margin="6,0,0,0"
                                Cursor="Hand">
                            <Button.Styles>
                                <Style Selector="Button:pointerover">
                                    <Setter Property="Background" Value="#7c7ff0"/>
                                </Style>
                            </Button.Styles>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <PathIcon Data="{x:Static icons:Icons.Check}"
                                          Width="16" Height="16"
                                          Foreground="White"/>
                                <TextBlock Text="{Binding Localization[Save]}" FontWeight="Medium"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </StackPanel>
                </ScrollViewer>
            </Border>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="1" 
                Background="#15152a"
                Padding="16,12">
            <TextBlock Text="Los cambios se guardan automáticamente" 
                       HorizontalAlignment="Center"
                       Foreground="#444"
                       FontSize="11"/>
        </Border>
    </Grid>
</UserControl>
